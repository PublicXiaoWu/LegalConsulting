<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_money_list_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:text="赏金"
        android:textColor="#ff333333"
        android:textSize="14sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
        android:id="@+id/tv_money_list_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="+ 50"
        android:textColor="#ffff6000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_money_list_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_money_list_type"
    />
    <TextView
        android:id="@+id/tv_money_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        android:text="05-17 11:10"
        android:textColor="#ff999999"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_money_list_type"
    />

    <View android:layout_width="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          app:layout_constraintTop_toBottomOf="@id/tv_money_list_time"
          android:layout_marginEnd="16dp"
          android:layout_height="1dp"
          android:background="#FFE5E5E5"
    />
</android.support.constraint.ConstraintLayout>