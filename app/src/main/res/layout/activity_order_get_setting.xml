<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#EAE8F1">

    <!--标题栏-->
    <include

        android:id="@+id/in_order_get_setting"
        layout="@layout/default_top"/>


    <!--忙碌-->
    <View
        android:id="@+id/v_order_get_setting1_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="11dp"
        android:onClick="onClickGetOrder"
        android:background="@drawable/selector_item_white_to_gary"
        app:layout_constraintTop_toBottomOf="@id/in_order_get_setting"/>

    <TextView
        android:id="@+id/tv_order_get_setting1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="忙碌"
        android:textColor="#ff666666"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/v_order_get_setting1_bg"
        app:layout_constraintStart_toStartOf="@id/v_order_get_setting1_bg"
        app:layout_constraintTop_toTopOf="@+id/v_order_get_setting1_bg"
    />

    <ImageView
        android:id="@+id/iv_order_get_setting_select1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginEnd="15dp"
        android:src="@mipmap/ic_order_get_setting_select_ok"
        app:layout_constraintBottom_toBottomOf="@+id/v_order_get_setting1_bg"
        app:layout_constraintEnd_toEndOf="@id/v_order_get_setting1_bg"
        app:layout_constraintTop_toTopOf="@+id/v_order_get_setting1_bg"/>


    <!--分隔线-->
    <View
        android:id="@+id/v_order_get_setting1_line_bg"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:onClick="onClick"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/v_order_get_setting1_bg"/>

    <View android:id="@+id/v_order_get_setting1"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginEnd="15dp"
          android:layout_marginStart="15dp"
          android:background="#EAEBEE"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/v_order_get_setting1_bg"/>


    <!--接单-->

    <View
        android:id="@+id/v_order_get_setting2_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:onClick="onClickGetOrder"
        android:background="@drawable/selector_item_white_to_gary"
        app:layout_constraintTop_toBottomOf="@id/v_order_get_setting1_line_bg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="接单"
        android:textColor="#ff666666"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/v_order_get_setting2_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/v_order_get_setting2_bg"
    />

    <ImageView
        android:id="@+id/iv_order_get_setting_select2"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:src="@mipmap/ic_order_get_setting_select_ok"
        app:layout_constraintBottom_toBottomOf="@+id/v_order_get_setting2_bg"
        app:layout_constraintEnd_toEndOf="@id/v_order_get_setting2_bg"
        app:layout_constraintTop_toTopOf="@+id/v_order_get_setting2_bg"/>



</android.support.constraint.ConstraintLayout>