<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item_white_to_gary"
>

    <ImageView
        android:id="@+id/iv_item_conversation_name"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_user_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_conversation_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="李好"
        android:textColor="#ff333333"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/iv_item_conversation_name"
        app:layout_constraintTop_toTopOf="@+id/iv_item_conversation_name"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="［视频通话］"
        android:textColor="#ff999999"
        android:textSize="10sp"
        android:layout_marginTop="11dp"
        app:layout_constraintStart_toEndOf="@id/iv_item_conversation_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_conversation_item_name"/>


    <TextView
        android:id="@+id/tv_main_top_end"
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:layout_marginEnd="16dp"
        android:text="下午6：29"
        android:textColor="#ff5159a2"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    />


</android.support.constraint.ConstraintLayout>

