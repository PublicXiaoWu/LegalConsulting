<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        android:id="@+id/in_qualification_authentication_top"
        layout="@layout/default_top"/>


    <ImageView
        android:id="@+id/iv_qualification_authentication_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:src="@mipmap/qualification_authentication_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/in_qualification_authentication_top"/>

    <TextView
        android:id="@+id/tv_qualification_authentication_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="您还未进行资格认证"
        android:textColor="#ff666666"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_qualification_authentication_top"
    />

    <TextView
        android:id="@+id/tv_qualification_authentication_go"
        android:layout_width="89dp"
        android:layout_height="34dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/shape_bg_text"
        android:gravity="center"
        android:text="马上认证"
        android:textColor="#ff666666"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_qualification_authentication_message"
    />


</android.support.constraint.ConstraintLayout>